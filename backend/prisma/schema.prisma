generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}

enum Status {
  DRAFT
  PUBLISHED
  ARCHIVED
  PRIVATE
  PUBLIC
}

enum ArticleCategory {
  MATH
  SCIENCE
  LITERATURE
  HISTORY
  COMPUTER_SCIENCE
  ARTS
  LANGUAGES
  GENERAL
}

enum CourseLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  EXPERT
}

enum QuestionType {
  MULTIPLE_CHOICE
  TRUE_FALSE
  SHORT_ANSWER
}

enum ResourceType {
  YOUTUBE
  LINK
  PDF
  DOCUMENT
}

model School {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  address     String?
  phone       String?
  email       String?
  website     String?
  logoUrl     String?
  description String?  @db.Text
  
  principals  Principal[]
  teachers    TeacherProfile[]
  students    StudentProfile[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
}

model Principal {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  schoolId  String
  school    School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  title     String?  @default("Director")
  isPrimary Boolean  @default(true)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([schoolId])
  @@index([userId])
}

model User {
  id               String           @id @default(cuid())
  email            String           @unique
  password         String
  role             Role             @default(STUDENT)
  createdAt        DateTime         @default(now())
  lessons          Lesson[]         @relation("TeacherLessons")
  courses          Course[]         @relation("TeacherCourses")
  enrollments      Enrollment[]
  articles         Article[]        @relation("AuthorArticles")
  teacherProfile   TeacherProfile?
  studentProfile   StudentProfile?
  principal       Principal?
  externalResources ExternalResource[]
  flashcards       Flashcard[]
  quizzes          Quiz[]
  settings         UserSettings?
  notifications    Notification[]
  studyAnalytics   StudyAnalytics[]
  bookmarks        Bookmark[]
  quizAttempts     QuizAttempt[]
  interactions     UserInteraction[]
  lessonCompletions LessonCompletion[]
  auditLogs        AuditLog[]
}

model Lesson {
  id                String            @id @default(cuid())
  title             String
  description       String?
  content           String
  status            Status           @default(PRIVATE)
  order             Int               @default(0)
  
  courseId          String?
  course            Course?           @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  externalResources ExternalResource[]
  flashcards        Flashcard[]
  
  teacherId         String
  teacher           User              @relation("TeacherLessons", fields: [teacherId], references: [id], onDelete: Cascade)
  
  completions       LessonCompletion[]
  
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  @@index([teacherId])
  @@index([courseId])
  @@index([status])
}

model Course {
  id                String             @id @default(cuid())
  title             String
  slug              String             @unique
  description       String?
  imageUrl          String?
  level             CourseLevel        @default(BEGINNER)
  category          String?            @default("GENERAL")
  tags              String[]           @default([])
  
  teacherId         String
  teacher           User               @relation("TeacherCourses", fields: [teacherId], references: [id], onDelete: Cascade)
  
  lessons           Lesson[]
  enrollments       Enrollment[]
  externalResources ExternalResource[]
  quizzes           Quiz[]
  flashcards        Flashcard[]
  
  status            Status            @default(DRAFT)
  published         Boolean           @default(false)
  enrollmentLimit   Int?
  waitlistEnabled   Boolean            @default(false)
  
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt

  @@index([teacherId])
  @@index([status])
  @@index([slug])
  @@index([category])
}

// Remvoed CourseLesson model

model LessonCompletion {
  id              String        @id @default(cuid())
  
  lessonId        String
  lesson          Lesson        @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  
  studentId       String
  student         User          @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  completedAt     DateTime      @default(now())

  @@unique([lessonId, studentId])
}

model TeacherProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  schoolId    String
  school      School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  bio         String?  @db.Text
  pictureUrl  String?
  phone       String?
  office      String?
  officeHours String?
  website     String?
  linkedin    String?
  twitter     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([schoolId])
}

model StudentProfile {
  id              String       @id @default(cuid())
  userId          String       @unique
  user            User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  schoolId        String
  school          School       @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  avatarUrl       String?
  bio             String?
  learningGoals   String[]
  interests       String[]
  preferredLevel  CourseLevel  @default(BEGINNER)
  grade           Int?
  section         String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([schoolId])
}

model Enrollment {
  id                   String     @id @default(cuid())
  studentId            String
  student              User       @relation(fields: [studentId], references: [id], onDelete: Cascade)
  courseId             String
  course               Course     @relation(fields: [courseId], references: [id], onDelete: Cascade)
  progress             Float      @default(0)
  completedLessonsCount Int       @default(0)
  lastAccessedLessonId String?    // Changed from lastAccessedCourseLessonId
  completedAt          DateTime?
  createdAt            DateTime   @default(now())
  updatedAt            DateTime   @updatedAt

  @@unique([studentId, courseId])
}

model Article {
  id          String          @id @default(cuid())
  title       String
  slug        String          @unique
  content     String
  excerpt     String?
  sourceUrl   String?
  category    ArticleCategory @default(GENERAL)
  tags        String[]        @default([])
  authorId    String
  author      User            @relation("AuthorArticles", fields: [authorId], references: [id], onDelete: Cascade)
  status      Status          @default(DRAFT)
  published   Boolean         @default(false)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  externalResources ExternalResource[]
  versions    ArticleVersion[]

  @@index([authorId])
  @@index([status])
  @@index([category])
  @@index([title])
}

model ExternalResource {
  id          String   @id @default(cuid())
  type        ResourceType
  url         String
  title       String
  description String?
  
  courses     Course[]
  lessons     Lesson[]
  articles    Article[]
  
  teacherId   String
  teacher     User     @relation(fields: [teacherId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Flashcard {
  id          String   @id @default(cuid())
  lessonId    String?
  lesson      Lesson?  @relation(fields: [lessonId], references: [id], onDelete: SetNull)
  courseId    String?
  course      Course?  @relation(fields: [courseId], references: [id], onDelete: Cascade)
  teacherId   String
  teacher     User     @relation(fields: [teacherId], references: [id])
  question    String
  answer      String
  status      Status   @default(PUBLIC)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([courseId])
  @@index([lessonId])
}

model Quiz {
  id          String   @id @default(cuid())
  title       String
  description String?
  lessonId    String?
  courseId    String?
  course      Course?  @relation(fields: [courseId], references: [id], onDelete: Cascade)
  teacherId   String
  teacher     User     @relation(fields: [teacherId], references: [id])
  questions   QuizQuestion[]
  attempts    QuizAttempt[]
  status      Status   @default(DRAFT)
  timeLimit   Int?
  passingScore Int     @default(70)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model QuizQuestion {
  id             String       @id @default(cuid())
  quizId         String
  quiz           Quiz         @relation(fields: [quizId], references: [id], onDelete: Cascade)
  question       String
  type           QuestionType @default(MULTIPLE_CHOICE)
  options        String[]
  correctAnswer  String
  explanation    String?
  order          Int          @default(0)
  points         Int          @default(1)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model QuizAttempt {
  id          String   @id @default(cuid())
  quizId      String
  quiz        Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  studentId   String
  student     User     @relation(fields: [studentId], references: [id])
  score       Float
  maxScore    Float
  passed      Boolean
  answers     String
  timeSpent   Int
  completedAt DateTime @default(now())
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String
  title     String
  message   String
  link      String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model StudyAnalytics {
  id                  String   @id @default(cuid())
  userId              String
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date                DateTime @default(now())
  minutesStudied      Int      @default(0)
  lessonsCompleted    Int      @default(0)
  quizzesTaken        Int      @default(0)
  flashcardsReviewed  Int      @default(0)
  articlesRead        Int      @default(0)

  @@unique([userId, date])
}

model Bookmark {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  resourceType  String
  resourceId    String
  title         String
  url           String?
  createdAt     DateTime @default(now())

  @@unique([userId, resourceType, resourceId])
}

model UserInteraction {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type         String
  resourceType String
  resourceId   String
  metadata     String?
  createdAt    DateTime @default(now())
}

model WhitelistedDomain {
  id        String   @id @default(cuid())
  domain    String   @unique
  name      String?
  createdAt DateTime @default(now())
}

model UserSettings {
  id                     String   @id @default(cuid())
  userId                 String   @unique
  user                   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  theme                  String   @default("system")
  language               String   @default("en")
  defaultDashboardView   String   @default("courses")
  contentPriority        String   @default("courses")
  showArticles           Boolean  @default(true)
  showFlashcards         Boolean  @default(true)
  showResources          Boolean  @default(true)
  preferredCategories    String[] @default([])
  preferredTeachers      String[] @default([])
  studyReminderEnabled   Boolean  @default(false)
  studyReminderTime      String?
  emailNotifications     Boolean  @default(true)
  courseUpdates          Boolean  @default(true)
  newArticles           Boolean  @default(true)
  newResources          Boolean  @default(true)
  flashcardReminders    Boolean  @default(false)
  showProfile           Boolean  @default(true)
  showProgress          Boolean  @default(true)
  allowAnalytics        Boolean  @default(true)
  hiddenCategories      String[] @default([])
  hiddenTags            String[] @default([])
  teacherToolsExpanded  Boolean  @default(false)
  defaultResourceType   String?  @default("LINK")
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model AuditLog {
  id         String   @id @default(cuid())
  userId     String?
  user       User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  action     String
  resource   String
  resourceId String?
  metadata   Json?
  createdAt  DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([resource, resourceId])
}

model ArticleVersion {
  id        String   @id @default(cuid())
  articleId String
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  content   String   @db.Text
  metadata  Json?
  version   Int
  createdAt DateTime @default(now())

  @@index([articleId])
  @@unique([articleId, version])
}
